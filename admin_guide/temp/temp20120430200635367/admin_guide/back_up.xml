    <title class="- topic/title " xtrf="/Users/scottb/Documents/git/documentation/admin_guide/back_up.dita" xtrc="title:1">Back Up Eucalyptus</title>
    <shortdesc class="- topic/shortdesc " xtrc="shortdesc:1" xtrf="/Users/scottb/Documents/git/documentation/admin_guide/back_up.dita"/>
