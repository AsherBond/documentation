    <title class="- topic/title " xtrf="/Users/scottb/Documents/git/documentation/admin_guide/restore.dita" xtrc="title:1">Restore Eucalyptus from a Backup</title>
    <shortdesc class="- topic/shortdesc " xtrc="shortdesc:1" xtrf="/Users/scottb/Documents/git/documentation/admin_guide/restore.dita"/>
    <prolog class="- topic/prolog "><copyright class="- topic/copyright " xtrc="copyright:1" xtrf="/Users/scottb/Documents/git/documentation/ag.ditamap">
