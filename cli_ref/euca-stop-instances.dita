  					</row>
  				</thead>
  				<tbody>
  					<row>
  						<entry><codeph>instance_id</codeph></entry>
  						<entry>Unique identifier for instance to stop</entry>
  					</row>
  				</tbody>
  			</tgroup>
  		</table>
  	</section>
