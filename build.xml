<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="pdf" name="build_euca_docs">
	<property name="pdf.formatter" value="xep"/>
	<property name="xep.dir" value="/Users/scotmarvin/xep"/>
	<property environment="env"/>
	<property name="dita-ot.dir" value="${env.DITA_HOME}"/>
	<property name="source.dir" value="${env.DOC_HOME}"/>
	<property name="antfile" value="${dita-ot.dir}/build.xml"/>
	<property name="www.dir"
		value="${env.HOME}${file.separator}Documents${file.separator}www${file.separator}httpdocs${file.separator}docs${file.separator}3.1${file.separator}beta"/>
 
	<target name="pdf">
<!-- Generate the PDF files	for all guides -->
		<ant antfile="build.xml" target="pdf" dir="ag"/>
		<ant antfile="build.xml" target="pdf" dir="cli"/>
		<ant antfile="build.xml" target="pdf" dir="fs"/>
		<ant antfile="build.xml" target="pdf" dir="ig"/>
		<ant antfile="build.xml" target="pdf" dir="ug"/>
		<antcall target="move"/>
		
	</target>
	
	<target name="move">
<!-- Move the generated files to the www repo	-->
		<move
			file="${source.dir}${file.separator}ag${file.separator}out${file.separator}pdf${file.separator}ag.pdf"
			todir="${www.dir}" overwrite="true"/>
		<move
			file="${source.dir}${file.separator}cli${file.separator}out${file.separator}pdf${file.separator}cli.pdf"
			todir="${www.dir}" overwrite="true"/>
		<move
			file="${source.dir}${file.separator}fs${file.separator}out${file.separator}pdf${file.separator}fs.pdf"
			todir="${www.dir}" overwrite="true"/>
		<move
			file="${source.dir}${file.separator}ig${file.separator}out${file.separator}pdf${file.separator}ig.pdf"
			todir="${www.dir}" overwrite="true"/>
		<move file="${source.dir}${file.separator}ug${file.separator}out${file.separator}pdf${file.separator}ug.pdf"
			todir="${www.dir}" overwrite="true"/>
	</target>
</project>